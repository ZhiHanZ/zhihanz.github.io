---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { loadSite } from '../lib/site'

interface Props {
  title?: string
  description?: string
  image?: string
}

const site = loadSite()
const { title, description, image } = Astro.props
const pageTitle = title ? `${title} | ${site.title}` : site.title
const pageDescription = description || site.description
const ogImage = image ? `${site.baseURL}${image}` : undefined
const canonicalURL = new URL(Astro.url.pathname, site.baseURL)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <meta name="author" content={site.author} />
    <title>{pageTitle}</title>
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content={ogImage ? "summary_large_image" : "summary"} />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Recursive:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="alternate" type="application/rss+xml" title={site.title} href="/rss.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://google.github.io/typograms/typograms.js"></script>
    <style>
      /* Typograms dark mode support - override injected stylesheet */
      @media (prefers-color-scheme: dark) {
        .prose svg.diagram line,
        .prose svg.diagram path,
        .prose svg.diagram polyline,
        .prose svg.diagram circle {
          stroke: #e5e7eb !important;
        }
        .prose svg.diagram polygon {
          stroke: #e5e7eb !important;
          fill: #e5e7eb !important;
        }
        .prose svg.diagram text {
          fill: #e5e7eb !important;
        }
        .prose svg.diagram circle[fill="white"] {
          fill: #111827 !important;
        }
      }
      .dark .prose svg.diagram line,
      .dark .prose svg.diagram path,
      .dark .prose svg.diagram polyline,
      .dark .prose svg.diagram circle {
        stroke: #e5e7eb !important;
      }
      .dark .prose svg.diagram polygon {
        stroke: #e5e7eb !important;
        fill: #e5e7eb !important;
      }
      .dark .prose svg.diagram text {
        fill: #e5e7eb !important;
      }
      .dark .prose svg.diagram circle[fill="white"] {
        fill: #111827 !important;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-200">
    <Header />
    <main class="flex-1 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
